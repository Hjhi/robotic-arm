<MainScreen>:
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: auto_move
        text: "Start"
        size: 200, 150
        center_x: root.width * 0.4
        center_y: root.height * 0.5
        text_color: 1, 1, 1, 1
        fill_color: 1, 0, 0, 1
        font_size: 30
        bold: True
        on_press: root.start_button()

    DPEAButton:
        id: manual_move
        text: 'Raise Arm'
        size: 200, 150
        center_x: root.width * 0.6
        center_y: root.height * 0.5
        text_color: 1, 1, 1, 1
        fill_color: "turquoise"
        font_size: 30
        bold: True
        on_press: root.manual_button()

    DPEAButton:
        id: rotate
        text: 'Rotate arm'
        size: 200, 150
        center_x: root.width * 0.5
        center_y: root.height * 0.3
        text_color: 1, 1, 1, 1
        fill_color: "turquoise"
        font_size: 30
        bold: True
        on_press: root.manual_rotate_button()

    DPEAButton:
        id: magnet
        text: 'Hold ball'
        size: 200, 150
        center_x: root.width * 0.5
        center_y: root.height * 0.7
        text_color: 1, 1, 1, 1
        fill_color: "turquoise"
        font_size: 30
        bold: True
        on_press: root.magnet_button()

    Slider:
        id: arm_slider
        min: 0
        max: 100
        step: 0
        x: root.width * 0.1
        center_y: root.height * 0.15
        size_hint_x: 0.8
        size_hint_y: 0.05
        on_value: root.manual_rotate_slider()

    Label:
        id: slider_label
        text: f"Arm Position: {arm_slider.value}%"
        x: root.width * 0.1
        center_y: root.height * 0.11