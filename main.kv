<MainScreen>:
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button_1
        text: "Hello"
        size: 200, 200
        x: root.width * 0.4
        y: root.height * 0.5
        text_color: 1, 1, 1, 1
        fill_color: 1, 0, 0, 1
        border_radius: root.height/2
        fill_radius: root.height/2
        font_size: 30
        on_press: root.pressed()

    DPEAButton:
        id: test_button_2
        text: 'World'
        size: 100, 200
        x: root.width * 0.6
        y: root.height * 0.5
        text_color: 1, 1, 1, 1
        fill_color: 0, 0, 1, 1
        font_size: 20
        bold: True
        on_press: root.pressed()